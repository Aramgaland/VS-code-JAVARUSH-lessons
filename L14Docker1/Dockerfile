
FROM python:3.12-slim

WORKDIR /app

# Две точки это значит заргузить из той же директории где и докер файл
COPY . .   

# Устанавливаем в нашу систему все зависимости их файла  requirements.txt считай библиотеки тут указываются для установки
RUN pip install -r requirements.txt


# Призапуске нашего контейнера должна быть выполнена определенная команда
CMD [ "python", "app.py" ]
