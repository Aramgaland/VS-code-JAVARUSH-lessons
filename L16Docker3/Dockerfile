
FROM python:3.12-slim

WORKDIR /app

COPY requirements.txt .

# Устанавливаем в нашу систему все зависимости их файла  requirements.txt считай библиотеки тут указываются для установки  ...  Команда нужна при сборке образа
RUN pip install -r requirements.txt

# Две точки это значит заргузить из той же директории где и докер файл
COPY . .   


# Призапуске нашего контейнера должна быть выполнена определенная команда
CMD [ "uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000" ]
